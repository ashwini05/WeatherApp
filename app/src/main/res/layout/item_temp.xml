<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardPreventCornerOverlap="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_temp_tv_annual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="12"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_temp_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_rectangle"
            android:padding="2dp"
            android:text="1991"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_temp_tv_winter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="43"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_divider_one"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_annual" />

        <TextView
            android:id="@+id/item_temp_tv_winter_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Winter"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_tv_spring_title"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_winter" />

        <View
            android:id="@+id/item_temp_divider_one"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/item_temp_tv_aut_title"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_tv_spring"
            app:layout_constraintStart_toEndOf="@+id/item_temp_tv_winter"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_annual" />

        <TextView
            android:id="@+id/item_temp_tv_spring"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="43"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_divider_two"
            app:layout_constraintStart_toEndOf="@+id/item_temp_divider_one"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_annual" />

        <TextView
            android:id="@+id/item_temp_tv_spring_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Spring"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_tv_sum_title"
            app:layout_constraintStart_toEndOf="@+id/item_temp_tv_winter_title"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_spring" />

        <View
            android:id="@+id/item_temp_divider_two"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/item_temp_tv_aut_title"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_tv_sum"
            app:layout_constraintStart_toEndOf="@+id/item_temp_tv_spring"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_annual" />

        <TextView
            android:id="@+id/item_temp_tv_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="43"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_divider_three"
            app:layout_constraintStart_toEndOf="@+id/item_temp_divider_two"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_annual" />

        <TextView
            android:id="@+id/item_temp_tv_sum_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Summer"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_tv_aut_title"
            app:layout_constraintStart_toEndOf="@+id/item_temp_tv_spring_title"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_sum" />

        <View
            android:id="@+id/item_temp_divider_three"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/item_temp_tv_aut_title"
            app:layout_constraintEnd_toStartOf="@+id/item_temp_tv_aut"
            app:layout_constraintStart_toEndOf="@+id/item_temp_tv_sum"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_annual" />

        <TextView
            android:id="@+id/item_temp_tv_aut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="43"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_temp_divider_three"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_annual" />

        <TextView
            android:id="@+id/item_temp_tv_aut_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Autumn"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_temp_tv_sum_title"
            app:layout_constraintTop_toBottomOf="@id/item_temp_tv_aut" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>